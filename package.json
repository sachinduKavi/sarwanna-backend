  "description": "",
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "mysql2": "^3.14.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1"
  }
}
