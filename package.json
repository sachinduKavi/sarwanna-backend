{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.ts",
    "dev": "nodemon index.ts",
    "build": "tsc",
    "db:generate": "drizzle-kit generate:pg --out-dir ./drizzle --schema ./drizzle/schema.ts",
    "db:migrate": "drizzle-kit push:pg --out-dir ./drizzle --schema ./drizzle/schema.ts",
    "db:rollback": "drizzle-kit rollback:pg --out-dir ./drizzle --schema ./drizzle/schema.ts",
    "db:seed": "drizzle-kit seed:pg --out-dir ./drizzle --schema ./drizzle/schema.ts",
    "db:reset": "drizzle-kit reset:pg --out-dir ./drizzle --schema ./drizzle/schema.ts",
    "db:status": "drizzle-kit status:pg --out-dir ./drizzle --schema ./drizzle/schema.ts"
  },
  "author": "Sachindu Kavishka",
